@using DataPatrolTask.Models
@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="Request.RequestedBy" Label="Requested By" Required />
        <MudTextField @bind-Value="Request.RequestedUserUserId" Label="Requested User ID" Required />
        <MudTextField @bind-Value="Request.Description" Label="Description" />
        <MudNumericField @bind-Value="Request.RequestCode" Label="Request Code" />
        <MudSelect T="RequestStatus" @bind-Value="Request.Status" Label="Status">
            @foreach (RequestStatus status in Enum.GetValues(typeof(RequestStatus)))
            {
                <MudSelectItem Value="@status">@status</MudSelectItem>
            }
        </MudSelect>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Submit" Color="Color.Primary">Save</MudButton>
        <MudButton OnClick="Cancel" Color="Color.Default">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public UserRequest Request { get; set; } = new();

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(Request));
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
